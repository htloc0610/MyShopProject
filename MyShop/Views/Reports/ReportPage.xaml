<Page
    x:Class="MyShop.Views.Reports.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI">

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Nhóm theo:" VerticalAlignment="Center"/>
                <ComboBox
                    Width="180"
                    ItemsSource="{x:Bind ViewModel.GroupByOptions}"
                    SelectedItem="{x:Bind ViewModel.SelectedGroupBy, Mode=TwoWay}"
                    DisplayMemberPath="Label"/>
            </StackPanel>

            <!-- LINE CHART -->
            <Border Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Số lượng bán theo thời gian"
                               FontWeight="SemiBold"/>

                    <lvc:CartesianChart
                        x:Name="ProductSalesChart"
                        Height="240"
                        Series="{x:Bind ViewModel.ProductSalesSeries, Mode=OneWay}"
                        XAxes="{x:Bind ViewModel.ProductSalesXAxes, Mode=OneWay}"
                        YAxes="{x:Bind ViewModel.ProductSalesYAxes, Mode=OneWay}"
                        ZoomMode="X"
                        LegendPosition="Hidden"/>
                </StackPanel>
            </Border>

            <!-- BAR CHART -->
            <Border Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Doanh thu và Lợi nhuận theo thời gian"
                               FontWeight="SemiBold"/>

                    <lvc:CartesianChart
                        x:Name="RevenueProfitChart"
                        Height="260"
                        Series="{x:Bind ViewModel.RevenueProfitSeries, Mode=OneWay}"
                        XAxes="{x:Bind ViewModel.RevenueProfitXAxes, Mode=OneWay}"
                        YAxes="{x:Bind ViewModel.RevenueProfitYAxes, Mode=OneWay}"
                        LegendPosition="Right"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
