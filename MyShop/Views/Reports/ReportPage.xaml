<Page
    x:Class="MyShop.Views.Reports.ReportPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:viewmodels="using:MyShop.ViewModels.Reports">

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">

            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Nhóm theo:" VerticalAlignment="Center"/>
                <ComboBox
                    Width="180"
                    ItemsSource="{x:Bind ViewModel.GroupByOptions}"
                    SelectedItem="{x:Bind ViewModel.SelectedGroupBy, Mode=TwoWay}"
                    DisplayMemberPath="Label"/>
            </StackPanel>

            <!-- LINE CHART -->
            <Border Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Số lượng bán theo thời gian"
                               FontWeight="SemiBold"/>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.ProductSalesChartHosts, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ReportViewModel">
                                <lvc:CartesianChart
                                    Height="240"
                                    Series="{x:Bind ProductSalesSeries}"
                                    XAxes="{x:Bind ProductSalesXAxes}"
                                    YAxes="{x:Bind ProductSalesYAxes}"
                                    ZoomMode="X"
                                    LegendPosition="Hidden"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- BAR CHART -->
            <Border Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Doanh thu và Lợi nhuận theo thời gian"
                               FontWeight="SemiBold"/>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.RevenueProfitChartHosts, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ReportViewModel">
                                <lvc:CartesianChart
                                    Height="260"
                                    Series="{x:Bind RevenueProfitSeries}"
                                    XAxes="{x:Bind RevenueProfitXAxes}"
                                    YAxes="{x:Bind RevenueProfitYAxes}"
                                    LegendPosition="Right"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
