<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.Products.ProductDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShop.Models.Products"
    mc:Ignorable="d"
    x:Name="RootPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,0,0,1"
              Padding="20,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0" 
                    Click="BackButton_Click"
                    Style="{StaticResource SubtleButtonStyle}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE72B;" FontSize="14"/>
                    <TextBlock Text="Quay lại" FontSize="13"/>
                </StackPanel>
            </Button>

            <!-- Title -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Chi Tiết Sản Phẩm" 
                          FontSize="16"
                          FontWeight="SemiBold"/>
                <TextBlock FontSize="11"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Visibility="{x:Bind Product, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Run Text="Mã: #"/>
                    <Run Text="{x:Bind Product.Id, Mode=OneWay, FallbackValue='N/A'}"/>
                </TextBlock>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2"
                       Orientation="Horizontal"
                       Spacing="8"
                       VerticalAlignment="Center"
                       Visibility="{x:Bind Product, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                
                <!-- Edit/Cancel Button -->
                <Button x:Name="EditButton"
                       Click="EditButton_Click"
                       VerticalAlignment="Center"
                       Background="{ThemeResource AccentFillColorDefaultBrush}"
                       Foreground="White"
                       Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon x:Name="EditIcon" Glyph="&#xE70F;" FontSize="14"/>
                        <TextBlock x:Name="EditText" Text="Chỉnh sửa" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Save Button (hidden by default) -->
                <Button x:Name="SaveButton"
                       Click="SaveButton_Click"
                       Visibility="Collapsed"
                       VerticalAlignment="Center"
                       Background="#107C10"
                       Foreground="White"
                       Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                        <TextBlock Text="Lưu" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <!-- Delete Button -->
                <Button x:Name="DeleteButton"
                       Click="DeleteButton_Click"
                       VerticalAlignment="Center"
                       Background="#C42B1C"
                       Foreground="White"
                       Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                        <TextBlock Text="Xóa" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" Padding="20" Visibility="{x:Bind Product, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid MaxWidth="1400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Image Gallery/Editor -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="Hình ảnh sản phẩm" 
                              FontSize="13"
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                    
                    <!-- View Mode: FlipView Gallery -->
                    <Grid Grid.Row="1" x:Name="ImageGalleryPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="350"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Big Image -->
                        <Border Grid.Row="0"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Margin="0,0,0,12">
                            <FlipView x:Name="ImageFlipView"
                                     ItemsSource="{x:Bind Product.ImageUrls, Mode=OneWay}">
                                <FlipView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Grid Padding="16">
                                            <Image Source="{Binding Converter={StaticResource RelativeToAbsoluteUrlConverter}}"
                                                  Stretch="Uniform"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </FlipView.ItemTemplate>
                            </FlipView>
                        </Border>

                        <!-- Thumbnails -->
                        <GridView Grid.Row="1"
                                  ItemsSource="{x:Bind Product.ImageUrls, Mode=OneWay}"
                                  SelectedIndex="{Binding ElementName=ImageFlipView, Path=SelectedIndex, Mode=TwoWay}"
                                  SelectionMode="Single"
                                  HorizontalAlignment="Center">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Border Width="80" Height="80"
                                            CornerRadius="4"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Margin="4">
                                        <Image Source="{Binding Converter={StaticResource RelativeToAbsoluteUrlConverter}}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </Grid>

                    <!-- Edit Mode: Image Editor -->
                    <ScrollViewer Grid.Row="1" x:Name="ImageEditorPanel" Visibility="Collapsed">
                        <StackPanel Spacing="16">
                            <!-- Info Tip -->
                            <InfoBar Severity="Informational"
                                     IsOpen="True"
                                     IsClosable="False"
                                     Title="Mẹo"
                                     Message="Kéo thả ảnh để thay đổi thứ tự. Ảnh đầu tiên sẽ được dùng làm ảnh đại diện." />

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="{x:Bind ViewModel.SelectedImageUrls.Count, Mode=OneWay}"/>
                                    <Run Text="/ 3"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Image List (GridView for Drag & Drop) -->
                            <GridView ItemsSource="{x:Bind ViewModel.SelectedImageUrls, Mode=OneWay}"
                                      CanReorderItems="True"
                                      CanDragItems="True"
                                      AllowDrop="True"
                                      SelectionMode="None">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4" Width="200" Height="200">
                                            <Border CornerRadius="8" 
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                                                <Grid>
                                                    <Image Source="{Binding Converter={StaticResource RelativeToAbsoluteUrlConverter}}" 
                                                           Stretch="UniformToFill"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                                    
                                                    <!-- Remove Button Overlay -->
                                                    <Button Command="{Binding ElementName=RootPage, Path=ViewModel.RemoveImageCommand}"
                                                            CommandParameter="{Binding}"
                                                            VerticalAlignment="Top"
                                                            HorizontalAlignment="Right"
                                                            Margin="8"
                                                            Padding="8"
                                                            Background="#CCFF0000"
                                                            Foreground="White"
                                                            CornerRadius="4">
                                                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                            </GridView>

                            <!-- Add Image Button -->
                            <Button Command="{x:Bind ViewModel.PickImagesCommand}"
                                    HorizontalAlignment="Stretch"
                                    Height="50"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                    <TextBlock Text="Thêm ảnh (Tối đa 3)" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            
                            <TextBlock Text="Hỗ trợ: .jpg, .png, .jpeg" 
                                      FontSize="11" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Right Column: Product Information -->
                <StackPanel Grid.Column="2" Spacing="16">
                    
                    <!-- Product Name -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Tên sản phẩm" 
                                      FontSize="11"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="NameTextBlock"
                                      Text="{x:Bind Product.Name, Mode=OneWay, FallbackValue='N/A'}"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      TextWrapping="Wrap"
                                      LineHeight="24"/>
                            <TextBox x:Name="NameTextBox"
                                    Visibility="Collapsed"
                                    PlaceholderText="Nhập tên sản phẩm"/>
                        </StackPanel>
                    </Border>

                    <!-- Price -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Giá bán" 
                                      FontSize="11"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="PriceTextBlock"
                                      Text="{x:Bind Product.FormattedPrice, Mode=OneWay, FallbackValue='N/A'}"
                                      FontSize="24"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      FontWeight="Bold"/>
                            <NumberBox x:Name="PriceNumberBox"
                                      Visibility="Collapsed"
                                      PlaceholderText="Nhập giá sản phẩm"
                                      SpinButtonPlacementMode="Inline"
                                      Minimum="0"
                                      LargeChange="100000"
                                      SmallChange="10000"/>
                        </StackPanel>
                    </Border>

                    <!-- Category & Stock -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Category -->
                        <Border Grid.Column="0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Loại sản phẩm" 
                                          FontSize="11"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <Border x:Name="CategoryBadge"
                                        Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                        CornerRadius="4"
                                        Padding="10,5"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Bind Product.Category, Mode=OneWay, FallbackValue='N/A'}"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                </Border>
                                <ComboBox x:Name="CategoryComboBox"
                                         ItemsSource="{x:Bind ViewModel.Categories}"
                                         SelectedValuePath="CategoryId"
                                         DisplayMemberPath="Name"
                                         Visibility="Collapsed"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="Chọn loại sản phẩm"/>
                            </StackPanel>
                        </Border>

                        <!-- Stock -->
                        <Border Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Tồn kho" 
                                          FontSize="11"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <StackPanel x:Name="StockStatusPanel" 
                                           Orientation="Horizontal" 
                                           Spacing="6">
                                    <Ellipse Width="10" Height="10" 
                                            Fill="{x:Bind Product.StockColor, Mode=OneWay, FallbackValue='Gray'}"/>
                                    <TextBlock Text="{x:Bind Product.StockStatus, Mode=OneWay, FallbackValue='N/A'}"
                                              FontSize="12"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                                <NumberBox x:Name="StockNumberBox"
                                          Visibility="Collapsed"
                                          PlaceholderText="Nhập số lượng"
                                          SpinButtonPlacementMode="Inline"
                                          Minimum="0"
                                          LargeChange="10"
                                          SmallChange="1"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- SKU -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="SKU" 
                                      FontSize="11"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="SkuTextBlock"
                                      Text="{x:Bind Product.Sku, Mode=OneWay, FallbackValue='N/A'}"
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBox x:Name="SkuTextBox"
                                    Visibility="Collapsed"
                                    PlaceholderText="Nhập mã SKU"/>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Mô tả sản phẩm" 
                                      FontSize="12"
                                      FontWeight="SemiBold"/>
                            <Border x:Name="DescriptionBorder"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10"
                                    MaxHeight="150">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock Text="{x:Bind Product.Description, Mode=OneWay, FallbackValue='N/A'}"
                                              FontSize="12"
                                              TextWrapping="Wrap"
                                              LineHeight="18"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </ScrollViewer>
                            </Border>
                            <TextBox x:Name="DescriptionTextBox"
                                    Visibility="Collapsed"
                                    PlaceholderText="Nhập mô tả sản phẩm"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Height="150"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Loading/No Product Message -->
        <StackPanel Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Spacing="12"
                   Visibility="{x:Bind Product, Mode=OneWay, Converter={StaticResource NullToVisibilityInverseConverter}}">
            <FontIcon Glyph="&#xE711;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="Không tìm thấy sản phẩm" 
                      FontSize="16" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>
