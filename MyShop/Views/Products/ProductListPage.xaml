<Page
    x:Class="MyShop.Views.Products.ProductListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:MyShop.Models.Products"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Danh Sách Sản Phẩm" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          FontWeight="Bold"/>
                <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Margin="0,4,0,0">
                    <Run Text="Tổng số:"/>
                    <Run Text="{x:Bind ViewModel.ProductCount, Mode=OneWay}"/>
                    <Run Text="sản phẩm"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <!-- Toggle Filter Mode Button -->
                <ToggleButton x:Name="FilterModeToggle"
                             IsChecked="False"
                             Click="FilterModeToggle_Click"
                             ToolTipService.ToolTip="Chuyển đổi chế độ lọc">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon x:Name="FilterModeIcon" Glyph="&#xE713;" FontSize="16"/>
                        <TextBlock x:Name="FilterModeText" Text="Plugin Filter"/>
                    </StackPanel>
                </ToggleButton>
                
                <Button Command="{x:Bind ViewModel.RefreshCommand}"
                       ToolTipService.ToolTip="Làm mới danh sách">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                        <TextBlock Text="Làm mới"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Plugin Filter Container (Dynamic) -->
        <Border Grid.Row="1" 
                x:Name="PluginFilterBorder"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74C;" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Advanced Search Plugin" 
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    
                    <Border Grid.Column="1"
                           Background="{ThemeResource SystemFillColorSuccessBrush}"
                           CornerRadius="4"
                           Padding="8,4">
                        <TextBlock Text="✓ Loaded" 
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Foreground="White"/>
                    </Border>
                </Grid>
                
                <!-- This will hold the dynamically loaded plugin UI -->
                <ContentControl x:Name="FilterContainer" 
                               Grid.Row="1"
                               HorizontalContentAlignment="Stretch"/>
            </Grid>
        </Border>

        <!-- Built-in Filter Bar (Fallback) -->
        <Border Grid.Row="2" 
                x:Name="BuiltInFilterBorder"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Search and Category -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Column="0"
                            PlaceholderText="Tìm kiếm theo tên sản phẩm..."
                            Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            VerticalAlignment="Center">
                        <TextBox.Header>
                            <TextBlock Text="Tìm kiếm" FontWeight="SemiBold"/>
                        </TextBox.Header>
                    </TextBox>

                    <!-- Category Filter -->
                    <ComboBox Grid.Column="2"
                             ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                             SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                             DisplayMemberPath="Name"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center">
                        <ComboBox.Header>
                            <TextBlock Text="Loại sản phẩm" FontWeight="SemiBold"/>
                        </ComboBox.Header>
                    </ComboBox>
                </Grid>

                <!-- Second Row: Price Range and Buttons -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Min Price -->
                    <NumberBox Grid.Column="0"
                              Value="{x:Bind ViewModel.MinPrice, Mode=TwoWay}"
                              PlaceholderText="0"
                              SpinButtonPlacementMode="Compact"
                              Minimum="0"
                              VerticalAlignment="Center">
                        <NumberBox.Header>
                            <TextBlock Text="Giá tối thiểu (VNĐ)" FontWeight="SemiBold"/>
                        </NumberBox.Header>
                    </NumberBox>

                    <!-- Max Price -->
                    <NumberBox Grid.Column="2"
                              Value="{x:Bind ViewModel.MaxPrice, Mode=TwoWay}"
                              PlaceholderText="0"
                              SpinButtonPlacementMode="Compact"
                              Minimum="0"
                              VerticalAlignment="Center">
                        <NumberBox.Header>
                            <TextBlock Text="Giá tối đa (VNĐ)" FontWeight="SemiBold"/>
                        </NumberBox.Header>
                    </NumberBox>

                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="4" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               VerticalAlignment="Bottom">
                        <Button Command="{x:Bind ViewModel.ApplyFiltersCommand}"
                               Style="{StaticResource AccentButtonStyle}"
                               Width="100">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE71C;" FontSize="16"/>
                                <TextBlock Text="Lọc"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{x:Bind ViewModel.ClearFiltersCommand}"
                               Width="120">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE894;" FontSize="16"/>
                                <TextBlock Text="Xóa lọc"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Sorting Controls -->
        <Grid Grid.Row="3" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Sắp xếp theo:" 
                          VerticalAlignment="Center"
                          Style="{StaticResource BodyTextBlockStyle}"/>
                
                <Button Content="Mã SP" 
                       Command="{x:Bind ViewModel.ChangeSortCommand}"
                       CommandParameter="id"
                       Style="{StaticResource AccentButtonStyle}"
                       Height="32"/>
                
                <Button Content="Tên" 
                       Command="{x:Bind ViewModel.ChangeSortCommand}"
                       CommandParameter="name"
                       Height="32"/>
                
                <Button Content="Giá" 
                       Command="{x:Bind ViewModel.ChangeSortCommand}"
                       CommandParameter="price"
                       Height="32"/>
                
                <Button Content="Tồn kho" 
                       Command="{x:Bind ViewModel.ChangeSortCommand}"
                       CommandParameter="stock"
                       Height="32"/>
                
                <FontIcon Glyph="{x:Bind ViewModel.IsDescending, Mode=OneWay, Converter={StaticResource SortDirectionToGlyphConverter}}"
                         FontSize="16"
                         VerticalAlignment="Center"
                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Error InfoBar -->
        <InfoBar Grid.Row="4"
                 IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                 Severity="Error"
                 Title="Lỗi"
                 Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                 IsClosable="True"
                 Margin="0,0,0,16"/>

        <!-- DataGrid -->
        <Grid Grid.Row="5">
            <!-- Progress Ring -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

            <!-- DataGrid -->
            <controls:DataGrid x:Name="ProductDataGrid"
                              ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedProduct, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              SelectionMode="Single"
                              DoubleTapped="ProductDataGrid_DoubleTapped"
                              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                
                <controls:DataGrid.Columns>
                    <!-- ID Column -->
                    <controls:DataGridTextColumn Header="Mã SP"
                                                Binding="{Binding Id}"
                                                Width="80"/>

                    <!-- Product Name Column -->
                    <controls:DataGridTextColumn Header="Tên Sản Phẩm"
                                                Binding="{Binding Name}"
                                                Width="2*"/>

                    <!-- Category Column -->
                    <controls:DataGridTextColumn Header="Loại"
                                                Binding="{Binding Category}"
                                                Width="150"/>

                    <!-- Price Column -->
                    <controls:DataGridTemplateColumn Header="Giá (VNĐ)"
                                                    Width="150">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <TextBlock Text="{x:Bind FormattedPrice}"
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Stock Column -->
                    <controls:DataGridTemplateColumn Header="Tồn Kho"
                                                    Width="120">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <Ellipse Width="8" Height="8" Fill="{x:Bind StockColor}"/>
                                    <TextBlock Text="{x:Bind Stock}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Description Column -->
                    <controls:DataGridTextColumn Header="Mô Tả"
                                                Binding="{Binding Description}"
                                                Width="2*"/>

                    <!-- Actions Column -->
                    <controls:DataGridTemplateColumn Header="Thao Tác"
                                                    Width="200">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <Button Click="ViewDetailButton_Click"
                                           Tag="{x:Bind}"
                                           Style="{StaticResource AccentButtonStyle}"
                                           Height="32">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE8A3;" FontSize="14"/>
                                            <TextBlock Text="Chi tiết"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Click="DeleteButton_Click"
                                           Tag="{x:Bind}"
                                           Height="32"
                                           Background="#C42B1C"
                                           Foreground="White">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            <TextBlock Text="Xóa"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>

        <!-- Pagination Controls -->
        <Border Grid.Row="6" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Page Size Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Số lượng/trang:" 
                              VerticalAlignment="Center"
                              Style="{StaticResource BodyTextBlockStyle}"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.PageSizeOptions}"
                             SelectedItem="{x:Bind ViewModel.SelectedPageSize, Mode=TwoWay}"
                             Width="80"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Page Info -->
                <TextBlock Grid.Column="1"
                          Text="{x:Bind ViewModel.PaginationInfo, Mode=OneWay}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Style="{StaticResource BodyStrongTextBlockStyle}"/>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="0,0,16,0">
                    <Button Command="{x:Bind ViewModel.GoToPreviousPageCommand}"
                           ToolTipService.ToolTip="Trang trước"
                           Width="100">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                            <TextBlock Text="Trước"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{x:Bind ViewModel.GoToNextPageCommand}"
                           ToolTipService.ToolTip="Trang sau"
                           Width="100">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Sau"/>
                            <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
