<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.Auth.ActivationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Views.Auth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.ViewModels.Auth"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Column 0: Branding & Gradient -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B6B" Offset="0"/>
                    <GradientStop Color="#FFE66D" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                <TextBlock Text="⏱️" 
                           FontSize="72" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Trial Period Expired" 
                           Foreground="White"
                           FontSize="48" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Activate your account to continue" 
                           Foreground="#E5E5E5"
                           FontSize="20"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Column 1: Activation Form -->
        <Grid Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="48">
            <Grid VerticalAlignment="Center" MaxWidth="400">
                <StackPanel Spacing="24">
                    <!-- Header -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Enter Activation Code" 
                                   Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Please contact the administrator to receive your 6-character activation code."
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringIsNotEmptyToBoolConverter}}"
                             Severity="Error"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                             IsClosable="False"/>

                    <!-- Activation Code Input -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Activation Code" FontWeight="SemiBold"/>
                        <TextBox Text="{x:Bind ViewModel.ActivationCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PlaceholderText="XXXXXX"
                                 MaxLength="6"
                                 CharacterCasing="Upper"
                                 FontSize="24"
                                 FontFamily="Consolas"
                                 HorizontalAlignment="Stretch"
                                 TextAlignment="Center"
                                 IsEnabled="{x:Bind ViewModel.IsActivating, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Text="Enter the 6-character code (letters and numbers)"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>

                    <!-- Activate Button -->
                    <Button Content="Activate Account" 
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.ActivateCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            Height="48"
                            FontSize="16"/>

                    <!-- Help Text -->
                    <StackPanel Spacing="8" Margin="0,16,0,0">
                        <TextBlock Text="Need help?" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="If you haven't received your activation code, please contact your administrator or complete the payment process to obtain your license key."/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="2" 
              Visibility="{x:Bind ViewModel.IsActivating, Mode=OneWay}"
              Background="#80000000">
             <ProgressRing IsActive="True" Width="64" Height="64" Foreground="White"/>
        </Grid>
    </Grid>

    <Page.Resources>
        <!-- Converters -->
        <local:StringIsNotEmptyToBoolConverter x:Key="StringIsNotEmptyToBoolConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Page.Resources>
</Page>
