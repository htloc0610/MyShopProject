<Page
    x:Class="MyShop.Views.Customers.CustomerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShop.Models.Customers"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <!-- Master Pane -->
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="16"/>
            <!-- Detail Pane -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Master Pane: Customer List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="KhÃ¡ch HÃ ng" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          FontWeight="Bold"/>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Margin="0,4,0,0">
                    <Run Text="Tá»•ng sá»‘:"/>
                    <Run Text="{x:Bind ViewModel.CustomerCount, Mode=OneWay}"/>
                    <Run Text="khÃ¡ch hÃ ng"/>
                </TextBlock>
            </StackPanel>

            <!-- Search Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        PlaceholderText="ðŸ” TÃ¬m theo tÃªn hoáº·c SÄT..."
                        Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Center"/>
                
                <Button Grid.Column="2" 
                       Command="{x:Bind ViewModel.SearchCommand}"
                       Style="{StaticResource AccentButtonStyle}"
                       ToolTipService.ToolTip="TÃ¬m kiáº¿m">
                    <FontIcon Glyph="&#xE721;" FontSize="16"/>
                </Button>
            </Grid>

            <!-- Add Customer Button -->
            <Button Grid.Row="2" 
                   HorizontalAlignment="Stretch"
                   Margin="0,0,0,12"
                   Click="AddCustomerButton_Click"
                   Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8FA;" FontSize="16"/>
                    <TextBlock Text="ThÃªm KhÃ¡ch HÃ ng"/>
                </StackPanel>
            </Button>

            <!-- Customer List -->
            <Border Grid.Row="3"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8">
                <Grid>
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                 Width="40" Height="40"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>

                    <ListView x:Name="CustomerListView"
                             ItemsSource="{x:Bind ViewModel.FilteredCustomers, Mode=OneWay}"
                             SelectedItem="{x:Bind ViewModel.SelectedCustomer, Mode=TwoWay}"
                             SelectionMode="Single"
                             Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Customer">
                                <Grid Padding="12,8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar Circle -->
                                    <Border Grid.Column="0" 
                                           Width="44" Height="44" 
                                           CornerRadius="22"
                                           Background="#7C3AED">
                                        <TextBlock Text="{x:Bind NameInitial}"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Customer Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name}"
                                                  FontWeight="SemiBold"
                                                  TextTrimming="CharacterEllipsis"
                                                  MaxLines="1"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2,0,0">
                                            <FontIcon Glyph="&#xE717;" FontSize="12" 
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind PhoneNumber}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="{x:Bind LoyaltyStatus}"
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <FontIcon Glyph="&#xE779;" FontSize="48" 
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                 Margin="0,0,0,12"/>
                        <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                                  TextAlignment="Center"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Pagination -->
            <StackPanel Grid.Row="4" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Spacing="8"
                       Margin="0,12,0,0">
                <Button Command="{x:Bind ViewModel.GoToPreviousPageCommand}"
                       ToolTipService.ToolTip="Trang trÆ°á»›c">
                    <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                </Button>
                <TextBlock Text="{x:Bind ViewModel.PaginationInfo, Mode=OneWay}"
                          VerticalAlignment="Center"
                          Style="{StaticResource CaptionTextBlockStyle}"/>
                <Button Command="{x:Bind ViewModel.GoToNextPageCommand}"
                       ToolTipService.ToolTip="Trang sau">
                    <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Detail Pane -->
        <Border Grid.Column="2"
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="12"
               Padding="24"
               Visibility="{x:Bind ViewModel.IsDetailPaneVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20">
                    <!-- Customer Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Large Avatar -->
                        <Border Grid.Column="0" 
                               Width="80" Height="80" 
                               CornerRadius="40"
                               Background="#7C3AED"
                               Margin="0,0,20,0">
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.NameInitial, Mode=OneWay, FallbackValue=''}"
                                      FontSize="32"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Name and Loyalty -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.Name, Mode=OneWay}"
                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                      FontWeight="Bold"/>
                            <Border Background="#F3E8FF" 
                                   CornerRadius="4" 
                                   Padding="8,4" 
                                   HorizontalAlignment="Left"
                                   Margin="0,8,0,0">
                                <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.LoyaltyStatus, Mode=OneWay}"
                                          FontWeight="SemiBold"
                                          Foreground="#7C3AED"/>
                            </Border>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button Click="EditCustomerButton_Click"
                                   ToolTipService.ToolTip="Sá»­a thÃ´ng tin">
                                <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                            </Button>
                            <Button Click="DeleteCustomerButton_Click"
                                   ToolTipService.ToolTip="XÃ³a khÃ¡ch hÃ ng"
                                   Background="#FEE2E2">
                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#DC2626"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Rectangle Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Height="1"/>

                    <!-- Total Spent Card -->
                    <Border Background="#F5F3FF" 
                           CornerRadius="12" 
                           Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7BF;" FontSize="20" Foreground="#7C3AED"/>
                                <TextBlock Text="Tá»•ng Chi TiÃªu"
                                          Style="{StaticResource BodyStrongTextBlockStyle}"
                                          Foreground="#7C3AED"/>
                            </StackPanel>
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedTotalSpent, Mode=OneWay}"
                                      Style="{StaticResource TitleTextBlockStyle}"
                                      FontWeight="Bold"
                                      Foreground="#7C3AED"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Cards -->
                    <StackPanel Spacing="12">
                        <!-- Phone -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="8"
                               Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="40" Height="40" 
                                       CornerRadius="8"
                                       Background="#DBEAFE"
                                       Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xE717;" FontSize="18" Foreground="#2563EB"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Sá»‘ Ä‘iá»‡n thoáº¡i"
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.PhoneNumber, Mode=OneWay}"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Address -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="8"
                               Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="40" Height="40" 
                                       CornerRadius="8"
                                       Background="#DCFCE7"
                                       Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xE707;" FontSize="18" Foreground="#16A34A"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Äá»‹a chá»‰"
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedAddress, Mode=OneWay}"
                                              FontWeight="SemiBold"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Birthday -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="8"
                               Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="40" Height="40" 
                                       CornerRadius="8"
                                       Background="#FEF3C7"
                                       Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xEB51;" FontSize="18" Foreground="#D97706"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="NgÃ y sinh"
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedBirthday, Mode=OneWay}"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Empty Detail State -->
        <Border Grid.Column="2"
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="12"
               Visibility="{x:Bind ViewModel.IsDetailPaneVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Spacing="12">
                <FontIcon Glyph="&#xE77B;" FontSize="64" 
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="Chá»n má»™t khÃ¡ch hÃ ng Ä‘á»ƒ xem chi tiáº¿t"
                          Style="{StaticResource BodyTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
