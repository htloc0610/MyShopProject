<Page
    x:Class="MyShop.Views.Customers.CustomerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShop.Models.Customers"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Grid Padding="32,24">
        <Grid.ColumnDefinitions>
            <!-- Master Pane -->
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="24"/>
            <!-- Detail Pane -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Master Pane: Customer List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with gradient background -->
            <Border Grid.Row="0" 
                    Background="#6366F1"
                    CornerRadius="12"
                    Padding="24,20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="KhÃ¡ch HÃ ng" 
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                        <TextBlock Text="Tá»•ng sá»‘:"
                                  FontSize="14"
                                  Foreground="#E0E7FF"/>
                        <TextBlock Text="{x:Bind ViewModel.CustomerCount, Mode=OneWay}"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="White"/>
                        <TextBlock Text="khÃ¡ch hÃ ng"
                                  FontSize="14"
                                  Foreground="#E0E7FF"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search Bar with improved design -->
            <Border Grid.Row="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="4"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            PlaceholderText="ðŸ” TÃ¬m theo tÃªn hoáº·c SÄT..."
                            Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            Padding="12,8"/>
                    
                    <Button Grid.Column="1" 
                           Command="{x:Bind ViewModel.SearchCommand}"
                           Background="#6366F1"
                           Foreground="White"
                           CornerRadius="8"
                           Padding="16,10"
                           Margin="4"
                           ToolTipService.ToolTip="TÃ¬m kiáº¿m">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE721;" FontSize="14"/>
                            <TextBlock Text="TÃ¬m" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Add Customer Button with gradient -->
            <Button Grid.Row="2" 
                   HorizontalAlignment="Stretch"
                   Margin="0,0,0,16"
                   Click="AddCustomerButton_Click"
                   Background="#10B981"
                   CornerRadius="10"
                   Padding="0,14"
                   BorderThickness="0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE8FA;" FontSize="18" Foreground="White"/>
                    <TextBlock Text="ThÃªm KhÃ¡ch HÃ ng Má»›i" 
                              FontSize="15"
                              FontWeight="SemiBold"
                              Foreground="White"/>
                </StackPanel>
            </Button>

            <!-- Customer List with shadow effect -->
            <Border Grid.Row="3"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="12"
                   Padding="4">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                
                <Grid>
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                 Width="48" Height="48"
                                 Foreground="#6366F1"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>

                    <ListView x:Name="CustomerListView"
                             ItemsSource="{x:Bind ViewModel.FilteredCustomers, Mode=OneWay}"
                             SelectedItem="{x:Bind ViewModel.SelectedCustomer, Mode=TwoWay}"
                             SelectionMode="Single"
                             Padding="4"
                             Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Customer">
                                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                       CornerRadius="10"
                                       Padding="14,12"
                                       Margin="4,2">
                                    <Grid ColumnSpacing="14">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar Circle with gradient -->
                                        <Border Grid.Column="0" 
                                               Width="52" Height="52" 
                                               CornerRadius="26">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#6366F1" Offset="0"/>
                                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{x:Bind NameInitial}"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Customer Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                            <TextBlock Text="{x:Bind Name}"
                                                      FontSize="15"
                                                      FontWeight="SemiBold"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxLines="1"/>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE717;" 
                                                         FontSize="12" 
                                                         Foreground="#6366F1"/>
                                                <TextBlock Text="{x:Bind PhoneNumber}"
                                                          FontSize="13"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Loyalty Badge -->
                                        <Border Grid.Column="2"
                                               Background="#FEF3C7"
                                               CornerRadius="6"
                                               Padding="10,6"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind LoyaltyStatus}"
                                                      FontSize="12"
                                                      FontWeight="SemiBold"
                                                      Foreground="#D97706"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Spacing="16"
                               Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <FontIcon Glyph="&#xE779;" 
                                 FontSize="64" 
                                 Foreground="#CBD5E1"/>
                        <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                                  FontSize="14"
                                  TextAlignment="Center"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Pagination with modern design -->
            <Border Grid.Row="4"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="10"
                   Padding="12,10"
                   Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Spacing="12">
                    <Button Command="{x:Bind ViewModel.GoToPreviousPageCommand}"
                           Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                           CornerRadius="8"
                           Padding="12,8"
                           ToolTipService.ToolTip="Trang trÆ°á»›c">
                        <FontIcon Glyph="&#xE76B;" FontSize="14" Foreground="#6366F1"/>
                    </Button>
                    <Border Background="#EEF2FF"
                           CornerRadius="8"
                           Padding="16,8">
                        <TextBlock Text="{x:Bind ViewModel.PaginationInfo, Mode=OneWay}"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  Foreground="#6366F1"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{x:Bind ViewModel.GoToNextPageCommand}"
                           Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                           CornerRadius="8"
                           Padding="12,8"
                           ToolTipService.ToolTip="Trang sau">
                        <FontIcon Glyph="&#xE76C;" FontSize="14" Foreground="#6366F1"/>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Detail Pane with improved design -->
        <Border Grid.Column="2"
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="16"
               Padding="28"
               Visibility="{x:Bind ViewModel.IsDetailPaneVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="24">
                    <!-- Customer Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Large Avatar with gradient -->
                        <Border Grid.Column="0" 
                               Width="88" Height="88" 
                               CornerRadius="44"
                               Margin="0,0,20,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.NameInitial, Mode=OneWay, FallbackValue=''}"
                                      FontSize="36"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Name and Loyalty -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.Name, Mode=OneWay}"
                                      FontSize="24"
                                      FontWeight="Bold"/>
                            <Border Background="#FEF3C7" 
                                   CornerRadius="8" 
                                   Padding="12,6" 
                                   HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE735;" FontSize="14" Foreground="#D97706"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.LoyaltyStatus, Mode=OneWay}"
                                              FontSize="13"
                                              FontWeight="SemiBold"
                                              Foreground="#D97706"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Spacing="8">
                            <Button Click="EditCustomerButton_Click"
                                   Background="#3B82F6"
                                   Foreground="White"
                                   CornerRadius="10"
                                   Padding="16,12"
                                   HorizontalAlignment="Stretch"
                                   ToolTipService.ToolTip="Sá»­a thÃ´ng tin">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                    <TextBlock Text="Sá»­a" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            <Button Click="DeleteCustomerButton_Click"
                                   Background="#EF4444"
                                   Foreground="White"
                                   CornerRadius="10"
                                   Padding="16,12"
                                   HorizontalAlignment="Stretch"
                                   ToolTipService.ToolTip="XÃ³a khÃ¡ch hÃ ng">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                    <TextBlock Text="XÃ³a" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Rectangle Fill="{ThemeResource DividerStrokeColorDefaultBrush}" 
                              Height="1" 
                              Opacity="0.5"/>

                    <!-- Total Spent Card with gradient -->
                    <Border CornerRadius="16" 
                           Padding="24">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE7BF;" FontSize="24" Foreground="White"/>
                                <TextBlock Text="Tá»•ng Chi TiÃªu"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedTotalSpent, Mode=OneWay}"
                                      FontSize="32"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Cards -->
                    <StackPanel Spacing="14">
                        <!-- Phone -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="12"
                               Padding="18">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="48" Height="48" 
                                       CornerRadius="12"
                                       Background="#DBEAFE">
                                    <FontIcon Glyph="&#xE717;" FontSize="20" Foreground="#3B82F6"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="Sá»‘ Ä‘iá»‡n thoáº¡i"
                                              FontSize="13"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.PhoneNumber, Mode=OneWay}"
                                              FontSize="16"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Address -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="12"
                               Padding="18">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="48" Height="48" 
                                       CornerRadius="12"
                                       Background="#D1FAE5">
                                    <FontIcon Glyph="&#xE707;" FontSize="20" Foreground="#10B981"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="Äá»‹a chá»‰"
                                              FontSize="13"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedAddress, Mode=OneWay}"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Birthday -->
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                               CornerRadius="12"
                               Padding="18">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="48" Height="48" 
                                       CornerRadius="12"
                                       Background="#FEF3C7">
                                    <FontIcon Glyph="&#xEB51;" FontSize="20" Foreground="#F59E0B"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="NgÃ y sinh"
                                              FontSize="13"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomer.FormattedBirthday, Mode=OneWay}"
                                              FontSize="16"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Empty Detail State -->
        <Border Grid.Column="2"
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="16"
               Visibility="{x:Bind ViewModel.IsDetailPaneVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Spacing="20">
                <Border Width="120" Height="120"
                       CornerRadius="60"
                       Background="#F1F5F9">
                    <FontIcon Glyph="&#xE77B;" 
                             FontSize="56" 
                             Foreground="#94A3B8"/>
                </Border>
                <StackPanel Spacing="8">
                    <TextBlock Text="Chá»n má»™t khÃ¡ch hÃ ng"
                              FontSize="18"
                              FontWeight="SemiBold"
                              TextAlignment="Center"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Chá»n khÃ¡ch hÃ ng tá»« danh sÃ¡ch Ä‘á»ƒ xem chi tiáº¿t"
                              FontSize="14"
                              TextAlignment="Center"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
