<Page
    x:Class="MyShop.Views.Orders.OrdersListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:orders="using:MyShop.Models.Orders"
    mc:Ignorable="d"
    x:Name="Root"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Danh Sách Đơn Hàng" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          FontWeight="Bold"/>
                <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Margin="0,4,0,0">
                    <Run Text="Tổng số:"/>
                    <Run Text="{x:Bind ViewModel.TotalCount, Mode=OneWay}"/>
                    <Run Text="đơn hàng"/>
                </TextBlock>
            </StackPanel>

            <Button Grid.Column="1"
                   Command="{x:Bind ViewModel.CreateNewOrderCommand}"
                   Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                    <TextBlock Text="Tạo Đơn Mới"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Unified Search & Filter Card -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <StackPanel Spacing="16">
                <!-- Top Row: Search and Controls -->
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Column="0"
                             PlaceholderText="Tìm theo tên khách, SĐT, mã giảm giá..."
                             Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Bottom">
                        <TextBox.Header>
                            <TextBlock Text="Tìm kiếm" FontWeight="SemiBold"/>
                        </TextBox.Header>
                    </TextBox>

                    <!-- Sort Options (Now in Toolbar) -->
                    <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Bottom">
                        <TextBlock Text="Sắp xếp theo" FontWeight="SemiBold"/>
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{x:Bind ViewModel.SortByOptions}"
                                      SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch"/>
                                      
                            <Button Grid.Column="1"
                                    Command="{x:Bind ViewModel.ToggleSortDirectionCommand}"
                                    ToolTipService.ToolTip="Đổi chiều sắp xếp"
                                    VerticalAlignment="Stretch"
                                    Margin="0"> 
                                <FontIcon Glyph="{x:Bind ViewModel.SortDirection, Mode=OneWay, Converter={StaticResource SortDirectionToGlyphConverter}}" FontSize="12"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               Spacing="8" 
                               VerticalAlignment="Bottom">
                        
                        <!-- Search Button -->
                        <Button Command="{x:Bind ViewModel.SearchCommand}"
                               Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE721;" FontSize="14"/>
                                <TextBlock Text="Tìm kiếm"/>
                            </StackPanel>
                        </Button>

                        <!-- Filter Toggle -->
                        <ToggleButton IsChecked="{x:Bind ViewModel.IsFilterExpanded, Mode=TwoWay}">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE71C;" FontSize="14"/>
                                <TextBlock Text="Bộ lọc nâng cao"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                </Grid>

                <!-- Expanded Filters Area -->
                <Grid Visibility="{x:Bind ViewModel.IsFilterExpanded, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      RowSpacing="16"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="0,1,0,0"
                      Padding="0,16,0,0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1: Status and Date Range -->
                    <Grid Grid.Row="0" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status Filter -->
                        <ComboBox Grid.Column="0"
                                  Header="Trạng thái"
                                  ItemsSource="{x:Bind ViewModel.AvailableStatuses}"
                                  SelectedItem="{x:Bind ViewModel.SelectedStatus, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"/>

                        <!-- Start Date -->
                        <CalendarDatePicker Grid.Column="1"
                                           Header="Từ ngày"
                                           Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                                           HorizontalAlignment="Stretch"/>

                        <!-- End Date -->
                        <CalendarDatePicker Grid.Column="2"
                                           Header="Đến ngày"
                                           Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"
                                           HorizontalAlignment="Stretch"/>
                    </Grid>

                    <!-- Row 2: Amount Range -->
                    <Grid Grid.Row="1" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Min Amount -->
                        <TextBox Grid.Column="0"
                                Header="Giá trị tối thiểu (VNĐ)"
                                PlaceholderText="0"
                                Text="{x:Bind ViewModel.MinAmountText, Mode=TwoWay}"
                                HorizontalAlignment="Stretch"/>

                        <!-- Max Amount -->
                        <TextBox Grid.Column="1"
                                Header="Giá trị tối đa (VNĐ)"
                                PlaceholderText="Không giới hạn"
                                Text="{x:Bind ViewModel.MaxAmountText, Mode=TwoWay}"
                                HorizontalAlignment="Stretch"/>
                    </Grid>

                    <!-- Row 3: Filter Actions (Clear/Apply is mostly redundant if realtime, but good for explicit action) -->
                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               HorizontalAlignment="Right">
                        <Button Command="{x:Bind ViewModel.ClearFiltersCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE894;" FontSize="14"/>
                                <TextBlock Text="Xóa bộ lọc"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{x:Bind ViewModel.ApplyFiltersCommand}"
                               Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE71C;" FontSize="14"/>
                                <TextBlock Text="Áp dụng"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Grid Grid.Row="2">
            <!-- Progress Ring -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

            <!-- Error InfoBar -->
            <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                     Severity="Error"
                     Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                     Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                     VerticalAlignment="Top"
                     Margin="0,0,0,16"/>

            <!-- DataGrid -->
            <controls:DataGrid x:Name="OrdersDataGrid"
                              ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              SelectionMode="Single"
                              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">

                <controls:DataGrid.Columns>
                    <!-- Order ID Column -->
                    <controls:DataGridTextColumn Header="Mã ĐH"
                                                Binding="{Binding OrderId}"
                                                Width="80"/>

                    <!-- Customer Name Column -->
                    <controls:DataGridTextColumn Header="Khách Hàng"
                                                Binding="{Binding CustomerName}"
                                                Width="2*"/>

                    <!-- Order Date Column -->
                    <controls:DataGridTextColumn Header="Ngày Đặt"
                                                Binding="{Binding FormattedOrderDate}"
                                                Width="150"/>

                    <!-- Status Column -->
                    <controls:DataGridTemplateColumn Header="Trạng Thái"
                                                    Width="120">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="orders:OrderListItem">
                                <Border Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                       CornerRadius="10"
                                       Padding="8,4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Status}" 
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Item Count Column -->
                    <controls:DataGridTemplateColumn Header="Sản Phẩm"
                                                    Width="100">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="orders:OrderListItem">
                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE7BF;" FontSize="12" Opacity="0.7"/>
                                    <TextBlock>
                                        <Run Text="{x:Bind ItemCount}"/>
                                        <Run Text=" SP"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Coupon Column -->
                    <controls:DataGridTemplateColumn Header="Mã Giảm Giá"
                                                    Width="120">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="orders:OrderListItem">
                                <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                       CornerRadius="6"
                                       Padding="6,3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{x:Bind CouponCode, Converter={StaticResource StringToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon Glyph="&#xE8F1;" FontSize="11"/>
                                        <TextBlock Text="{x:Bind CouponCode}" 
                                                  FontSize="11" 
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Final Amount Column -->
                    <controls:DataGridTemplateColumn Header="Thành Tiền"
                                                    Width="150">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="orders:OrderListItem">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind FormattedFinalAmount}" 
                                              FontWeight="Bold"
                                              FontSize="15"
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="VNĐ" 
                                              Opacity="0.6" 
                                              FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Actions Column -->
                    <controls:DataGridTemplateColumn Header="Thao Tác"
                                                    Width="180">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="orders:OrderListItem">
                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                    <!-- Detail Button -->
                                    <Button Click="ViewDetailButton_Click"
                                           Tag="{x:Bind}"
                                           Style="{StaticResource AccentButtonStyle}"
                                           Height="32">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE8A3;" FontSize="14"/>
                                            <TextBlock Text="Chi tiết"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Delete Button (Only for New status) -->
                                    <Button Click="DeleteButton_Click"
                                           Tag="{x:Bind}"
                                           Height="32"
                                           Background="#E81123"
                                           BorderBrush="#D13438"
                                           BorderThickness="1">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="White"/>
                                            <TextBlock Text="Xóa" Foreground="White" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <!-- Empty State -->
            <StackPanel Spacing="12" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,48,0,0"
                       Visibility="{x:Bind ViewModel.Orders.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                <FontIcon Glyph="&#xE7C0;" FontSize="64" Opacity="0.3"/>
                <TextBlock Text="Không có đơn hàng nào" 
                          FontSize="18" 
                          Opacity="0.6"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Pagination -->
        <Border Grid.Row="3" 
               Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
               BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
               BorderThickness="1"
               CornerRadius="8"
               Padding="16"
               Margin="0,16,0,0">
            <Grid>
                <TextBlock VerticalAlignment="Center" Opacity="0.7">
                    <Run Text="Hiển thị"/>
                    <Run Text="{x:Bind ViewModel.PageInfo, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Spacing="12">
                    
                    <!-- Page Size Selector -->
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Số dòng:" VerticalAlignment="Center" Opacity="0.7"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.AvailablePageSizes}"
                                  SelectedItem="{x:Bind ViewModel.PageSize, Mode=TwoWay}"
                                  MinWidth="70"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Command="{x:Bind ViewModel.GoToPreviousPageCommand}"
                           IsEnabled="{x:Bind ViewModel.CanGoToPreviousPage, Mode=OneWay}"
                           Padding="12,8"
                           MinWidth="100">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                            <TextBlock Text="Trước"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.GoToNextPageCommand}"
                           IsEnabled="{x:Bind ViewModel.CanGoToNextPage, Mode=OneWay}"
                           Padding="12,8"
                           MinWidth="100">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="Sau"/>
                            <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
