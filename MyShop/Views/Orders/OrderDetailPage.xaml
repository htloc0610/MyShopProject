<Page
    x:Class="MyShop.Views.Orders.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:orders="using:MyShop.Models.Orders"
    mc:Ignorable="d"
    x:Name="Root"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Spacing="24">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Command="{x:Bind ViewModel.GoBackCommand}"
                       Background="Transparent"
                       BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                        <TextBlock Text="Quay lại"/>
                    </StackPanel>
                </Button>

                <TextBlock Grid.Column="1"
                          Text="Chi Tiết Đơn Hàng" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <!-- Edit/Save/Cancel Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <!-- Print Invoice Button (View Mode) -->
                    <Button Command="{x:Bind ViewModel.PrintInvoiceCommand}"
                           Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE749;" FontSize="16"/>
                            <TextBlock Text="In Hóa Đơn"/>
                        </StackPanel>
                    </Button>

                    <!-- Delete Button (View Mode) -->
                    <Button x:Name="DeleteButton"
                           Click="DeleteButton_Click"
                           Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#D13438"/>
                            <TextBlock Text="Xóa" Foreground="#D13438"/>
                        </StackPanel>
                    </Button>

                    <!-- Edit Button (View Mode) -->
                    <Button Command="{x:Bind ViewModel.ToggleEditModeCommand}"
                           Style="{StaticResource AccentButtonStyle}"
                           IsEnabled="{x:Bind ViewModel.CanEdit, Mode=OneWay}"
                           Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                            <TextBlock Text="Chỉnh Sửa"/>
                        </StackPanel>
                    </Button>

                    <!-- Save Button (Edit Mode) -->
                    <Button Command="{x:Bind ViewModel.SaveChangesCommand}"
                           Style="{StaticResource AccentButtonStyle}"
                           Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                            <TextBlock Text="Lưu"/>
                        </StackPanel>
                    </Button>

                    <!-- Cancel Button (Edit Mode) -->
                    <Button Command="{x:Bind ViewModel.CancelEditCommand}"
                           Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                            <TextBlock Text="Hủy"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                         Width="50" Height="50"
                         HorizontalAlignment="Center"/>

            <!-- Error Message -->
            <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                    Severity="Error"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Success Message -->
            <InfoBar IsOpen="{x:Bind ViewModel.SuccessMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                    Severity="Success"
                    Message="{x:Bind ViewModel.SuccessMessage, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.SuccessMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Order Details -->
            <Grid Visibility="{x:Bind ViewModel.CurrentOrder, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                  ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="450"/>
                    <ColumnDefinition Width="1*" MinWidth="320" MaxWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Order Items -->
                <StackPanel Grid.Column="0" Spacing="20">
                    <!-- Order Info Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Padding="24"
                           Translation="0,0,4">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                        <Grid ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Order ID Badge -->
                            <Border Grid.Column="0"
                                   Background="{ThemeResource AccentFillColorDefaultBrush}"
                                   CornerRadius="40"
                                   Width="80" Height="80"
                                   VerticalAlignment="Top">
                                <TextBlock Text="{x:Bind ViewModel.CurrentOrder.OrderId, Mode=OneWay}" 
                                          FontWeight="Bold"
                                          FontSize="28"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Customer Info -->
                            <StackPanel Grid.Column="1" Spacing="12" VerticalAlignment="Center">
                                <!-- Customer Name - Always Readonly -->
                                <TextBlock Text="{x:Bind ViewModel.CurrentOrder.CustomerName, Mode=OneWay}" 
                                          FontWeight="Bold" 
                                          FontSize="22"/>
                                
                                <StackPanel Spacing="8">
                                    <!-- Date -->
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentOrder.FormattedOrderDate, Mode=OneWay}" 
                                                  Opacity="0.8"
                                                  FontSize="14"/>
                                    </StackPanel>
                                    
                                    <!-- Phone - Always Readonly -->
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE717;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentOrder.CustomerPhone, Mode=OneWay}" 
                                                  Opacity="0.8"
                                                  FontSize="14"/>
                                    </StackPanel>
                                    
                                    <!-- Address - Always Readonly -->
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE707;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentOrder.CustomerAddress, Mode=OneWay}" 
                                                  Opacity="0.8"
                                                  FontSize="14"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Order Items Table -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Padding="24"
                           Translation="0,0,4">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                        <StackPanel Spacing="20">
                            <TextBlock Text="Sản Phẩm" FontWeight="SemiBold" FontSize="20"/>

                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.CurrentOrder.Items, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="orders:OrderItemDetail">
                                        <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                               BorderThickness="0,0,0,1"
                                               Padding="0,16">
                                            <Grid ColumnSpacing="16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="6">
                                                    <TextBlock Text="{x:Bind ProductName}" FontWeight="SemiBold" FontSize="15"/>
                                                    <TextBlock Text="{x:Bind ProductSku}" 
                                                              Opacity="0.6" 
                                                              FontSize="12"
                                                              Visibility="{x:Bind ProductSku, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1" 
                                                          Text="{x:Bind FormattedUnitPrice}" 
                                                          Opacity="0.7"
                                                          FontSize="14"
                                                          VerticalAlignment="Center"/>

                                                <Border Grid.Column="2"
                                                       Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                                       CornerRadius="12"
                                                       Padding="12,6"
                                                       VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <FontIcon Glyph="&#xE8EF;" FontSize="12"/>
                                                        <TextBlock Text="{x:Bind Quantity}" FontWeight="SemiBold" FontSize="14"/>
                                                    </StackPanel>
                                                </Border>

                                                <TextBlock Grid.Column="3" 
                                                          Text="{x:Bind FormattedTotalPrice}" 
                                                          FontWeight="Bold"
                                                          FontSize="16"
                                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column: Summary -->
                <StackPanel Grid.Column="1" Spacing="20">
                    <!-- Totals Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Padding="24"
                           Translation="0,0,4">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                        <StackPanel Spacing="16">
                            <TextBlock Text="Tổng Cộng" FontWeight="SemiBold" FontSize="20"/>

                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="Tạm tính:" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.CurrentOrder.FormattedTotalAmount, Mode=OneWay}" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid Visibility="{x:Bind ViewModel.CurrentOrder.CouponCode, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="Giảm giá:" FontWeight="SemiBold" FontSize="14"/>
                                        <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                               CornerRadius="8"
                                               Padding="8,3"
                                               VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE8F1;" FontSize="11"/>
                                                <TextBlock Text="{x:Bind ViewModel.CurrentOrder.CouponCode, Mode=OneWay}" 
                                                          FontSize="12" 
                                                          FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{x:Bind ViewModel.CurrentOrder.FormattedDiscountAmount, Mode=OneWay}" 
                                              Foreground="#D13438"
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              HorizontalAlignment="Right"/>
                                </Grid>

                                <Border Height="2" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8"/>

                                <Grid>
                                    <TextBlock Text="Thành tiền:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{x:Bind ViewModel.CurrentOrder.FormattedFinalAmount, Mode=OneWay}" 
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                              FontWeight="Bold"
                                              FontSize="24"
                                              HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Status Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Padding="24"
                           Translation="0,0,4">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                        <StackPanel Spacing="16">
                            <TextBlock Text="Trạng Thái" 
                                      FontWeight="SemiBold" 
                                      FontSize="18"/>
                            
                            <!-- Status Badge - View Mode -->
                            <Border Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                   CornerRadius="20"
                                   Padding="16,10"
                                   HorizontalAlignment="Left"
                                   Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE73E;" FontSize="16"/>
                                    <TextBlock Text="{x:Bind ViewModel.CurrentOrder.Status, Mode=OneWay}" 
                                              FontSize="15"
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Status ComboBox - Edit Mode -->
                            <ComboBox ItemsSource="{x:Bind ViewModel.AvailableStatuses}"
                                     SelectedItem="{x:Bind ViewModel.SelectedStatus, Mode=TwoWay}"
                                     Header="Chọn Trạng Thái"
                                     HorizontalAlignment="Stretch"
                                     Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
